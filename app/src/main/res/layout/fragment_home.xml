<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Laptop card view -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_laptop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- laptop image view -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ig_laptop"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_laptop"/>
                <!-- laptop text view -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ig_laptop"
                    android:layout_centerHorizontal="true"
                    android:text="Laptop"
                    android:textSize="16sp"/>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- book card view -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- book image view -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ig_book"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_book"/>
                <!-- book text view -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ig_book"
                    android:layout_centerHorizontal="true"
                    android:text="Book"
                    android:textSize="16sp"/>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
