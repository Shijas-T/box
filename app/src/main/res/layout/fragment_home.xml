        </com.google.android.material.card.MaterialCardView>

        <!-- bag card view -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
